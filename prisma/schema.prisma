generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Review {
  id            String   @id @default(cuid())
  name          String
  email         String
  destination   String
  serviceRating Int
  review        String   @db.Text
  status        Status   @default(APPROVED)
  avatar        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}
